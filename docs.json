{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Journium Documentation",
  "colors": {
    "primary": "#3B82F6",
    "light": "#60A5FA",
    "dark": "#1D4ED8"
  },
  "favicon": {
    "light": "/images/favicon_gradient_light.png",
    "dark": "/images/favicon_gradient_dark.png"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Installation",
            "pages": [
              "installation/javascript",
              "installation/react",
              "installation/nextjs"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "configuration/setup",
              "configuration/tracking",
              "configuration/events"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/analytics",
              "features/recommendations",
              "features/optimization"
            ]
          },
          {
            "group": "Troubleshooting",
            "pages": [
              "troubleshooting/common-issues",
              "troubleshooting/faq"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "SDK Methods",
            "pages": [
              "api-reference/introduction",
              "api-reference/initialization",
              "api-reference/tracking",
              "api-reference/events"
            ]
          },
          {
            "group": "REST API",
            "pages": [
              "api-reference/rest/authentication",
              "api-reference/rest/analytics",
              "api-reference/rest/recommendations"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://journium.app",
          "icon": "chart-line"
        },
        {
          "anchor": "Support",
          "href": "https://journium.app",
          "icon": "life-ring"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/journium",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/brand_mark_light.svg",
    "dark": "/logo/brand_mark_dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact",
        "href": "mailto:hello@journium.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://journium.app"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/journiumapp",
      "github": "https://github.com/journium",
      "linkedin": "https://linkedin.com/company/journium"
    }
  }
}
