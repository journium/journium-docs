{
  "name": "@journium/docs-mcp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/docs-mcp/src",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx watch --env-file=.env src/index.ts",
        "cwd": "apps/docs-mcp"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "apps/docs-mcp"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "prepare-content": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/prepare-build.js",
        "cwd": "apps/docs-mcp"
      },
      "outputs": ["{projectRoot}/content"]
    },
    "build-docker-prep": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare-content", "build"],
      "options": {
        "command": "echo 'Content and build ready for Docker'"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-docker-prep"],
      "options": {
        "command": "docker build -f apps/docs-mcp/Dockerfile -t journium-docs-mcp .",
        "cwd": "{workspaceRoot}"
      }
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run --rm -p 3100:3100 journium-docs-mcp"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_ENV=production node dist/index.js",
        "cwd": "apps/docs-mcp"
      }
    },
    "validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./scripts/validate.sh",
        "cwd": "apps/docs-mcp"
      }
    }
  },
  "tags": ["type:app", "platform:node"]
}
